{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            1,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": [
            1,
            { "vars": "local" }
        ],
        "no-alert": 2,
        "no-console": 1,
        "eqeqeq": [
            1,
            "smart"
        ],
        "no-new-require": 2,
        "no-lonely-if": 2,
        "no-mixed-requires": [
            1,
            { "grouping": true }
        ],
        "global-require": 1,
        "array-bracket-spacing": [
            1,
            "always"
        ],
        "camelcase": [
            1,
            { "properties": "always" }
        ],
        "comma-spacing": [
            2,
            { "before": false, "after": true }
        ],
        "computed-property-spacing": [
            1,
            "never"
        ],
        "consistent-this": [
            2,
            "self"
        ],
        "eol-last": 2,
        "key-spacing": [
            1,
            { "beforeColon": false, "afterColon": true }
        ],
        "max-params": [
            1,
            3
        ],
        "new-cap": 1,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "operator-linebreak": [
            1,
            "before",
            { "overrides": { "?": "after" } }
        ],
        "quote-props": [
            2,
            "as-needed",
            { "keywords": true }
        ],
        "require-jsdoc": [2, {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
            }
        }],
        "semi-spacing": 2,
        "keyword-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [
            1,
            { "anonymous": "always", "named": "never" }
        ],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 2
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended"
}
